{
  "name": "cf-workers-tester",
  "private": true,
  "type": "module",
  "scripts": {
    "hwy-prebuild": "tailwindcss -i src/styles/tw-input.css -o src/styles/tw-output.bundle.css",
    "build": "tsc --noEmit && hwy-build && hwy-cf-workers-hack",
    "start": "node dist/main.js",
    "dev": "wrangler dev --node-compat dist/main.js",
    "deploy": "wrangler deploy --node-compat dist/main.js"
  },
  "dependencies": {
    "@hono/node-server": "^1.2.0",
    "hono": "^3.7.5",
    "hwy": "workspace:*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231002.0",
    "@hwy-js/dev": "workspace:*",
    "@types/node": "^20.8.4",
    "cross-env": "^7.0.3",
    "esbuild": "^0.19.4",
    "htmx.org": "^1.9.6",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2",
    "wrangler": "^3.11.0"
  },
  "engines": {
    "node": ">=18.14.1"
  }
}
