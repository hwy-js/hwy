{
  "name": "@hwy-js/client",
  "version": "0.0.0-beta.0",
  "author": {
    "name": "Samuel J. Cook"
  },
  "license": "MIT",
  "description": "Browser-targeted utilities for Hwy framework",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup-node index.ts --format esm --dts",
    "lint": "tsc",
    "dev": "rm -rf dist && tsup-node index.ts --format esm --dts --watch --sourcemap",
    "publish-beta": "npm publish --tag beta",
    "publish-non-beta": "npm publish",
    "update-latest": "pnpm update --latest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@preact/signals": "^1.2.2",
    "@types/nprogress": "^0.2.3",
    "htmx.org": "^1.9.9",
    "idiomorph": "^0.0.9",
    "nprogress": "^0.2.0",
    "preact": "^10.19.3",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "htmx.org": ">=1.9.6",
    "idiomorph": ">=0.0.9",
    "nprogress": ">=0.2.0"
  },
  "peerDependenciesMeta": {
    "htmx.org": {
      "optional": true
    },
    "idiomorph": {
      "optional": true
    },
    "nprogress": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hwy-js/hwy",
    "directory": "packages/client"
  },
  "homepage": "https://hwy.dev",
  "bugs": "https://github.com/hwy-js/hwy/issues",
  "sideEffects": false
}
