{
  "name": "create-hwy",
  "version": "0.0.0-beta.18",
  "author": {
    "name": "Samuel J. Cook"
  },
  "license": "MIT",
  "description": "New project generator for Hwy framework",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist",
    "__common",
    "__public"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup-node index.ts --format esm",
    "create-hwy": "pnpm clear-asdf && pnpm run build && node dist/index.js",
    "publish-beta": "npm publish --tag beta",
    "publish-non-beta": "npm publish",
    "update-latest": "pnpm update --latest",
    "typecheck": "tsc",
    "clear-asdf": "rm -rf asdf",
    "print-asdf": "cat asdf/package.json"
  },
  "bin": {
    "create-hwy": "./scripts/create-hwy.js"
  },
  "dependencies": {
    "inquirer": "^9.2.12",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@css-hooks/core": "^1.8.0",
    "@hono/node-server": "^1.4.0",
    "@hwy-js/utils": "workspace:*",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.2",
    "@types/nprogress": "^0.2.3",
    "bun-types": "^1.0.22",
    "hono": "^3.12.4",
    "htmx.org": "^1.9.10",
    "hwy": "workspace:*",
    "idiomorph": "^0.3.0",
    "npm-run-all": "^4.1.5",
    "nprogress": "^0.2.0",
    "prettier": "^3.2.2",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "wrangler": "^3.22.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hwy-js/hwy",
    "directory": "packages/create-hwy"
  },
  "homepage": "https://hwy.dev",
  "bugs": "https://github.com/hwy-js/hwy/issues"
}
