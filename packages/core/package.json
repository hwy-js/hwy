{
  "name": "hwy",
  "version": "0.2.2-beta.3",
  "author": {
    "name": "Samuel J. Cook"
  },
  "license": "MIT",
  "description": "Lightweight, flexible, and powerful alternative to NextJS, based on HTMX instead of React",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsup-node index.ts --format esm --dts",
    "dev": "rimraf dist && tsup-node index.ts --format esm --dts --watch --sourcemap",
    "publish-beta": "npm publish --tag beta"
  },
  "devDependencies": {
    "@hono/node-server": "^1.2.0",
    "@hwy-js/dev": "workspace:*",
    "@types/node": "^20.6.3",
    "hono": "^3.7.1",
    "rimraf": "^5.0.1",
    "tsup": "^7.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hwy-js/hwy",
    "directory": "packages/core"
  },
  "homepage": "https://hwy.dev",
  "bugs": "https://github.com/hwy-js/hwy/issues",
  "keywords": [
    "framework",
    "typescript",
    "htmx",
    "hono",
    "router",
    "jsx",
    "nextjs",
    "remix"
  ],
  "sideEffects": false
}
