{
  "name": "hwy",
  "version": "0.0.0-beta.3",
  "author": {
    "name": "Samuel J. Cook"
  },
  "license": "MIT",
  "description": "Simple, lightweight, and flexible web framework, built on Hono and HTMX.",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup-node index.ts --format esm --dts",
    "dev": "rm -rf dist && tsup-node index.ts --format esm --dts --watch",
    "publish-beta": "npm publish --tag beta",
    "publish-non-beta": "npm publish",
    "update-latest": "pnpm update --latest",
    "typecheck": "tsc"
  },
  "dependencies": {
    "devalue": "^4.3.2",
    "preact-render-to-string": "^6.3.1"
  },
  "devDependencies": {
    "@hono/node-server": "^1.3.3",
    "@hwy-js/build": "workspace:*",
    "@hwy-js/dev": "workspace:*",
    "@types/node": "^20.10.4",
    "hono": "^3.11.7",
    "preact": "^10.19.3",
    "tsup": "^8.0.1"
  },
  "peerDependencies": {
    "hono": "^3.11.1",
    "preact": "^10.19.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hwy-js/hwy",
    "directory": "packages/core"
  },
  "homepage": "https://hwy.dev",
  "bugs": "https://github.com/hwy-js/hwy/issues",
  "keywords": [
    "simple",
    "lightweight",
    "flexible",
    "framework",
    "metaframework",
    "web",
    "typescript",
    "hono",
    "router",
    "nested",
    "routing",
    "jsx",
    "tsx",
    "nextjs",
    "remix",
    "react",
    "preact",
    "signals"
  ],
  "sideEffects": false
}
