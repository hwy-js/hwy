{
  "name": "@hwy-js/utils",
  "version": "0.0.0-beta.20",
  "author": {
    "name": "Samuel J. Cook"
  },
  "license": "MIT",
  "description": "Various utilities for Hwy framework",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./htmx": "./dist/htmx.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup-node index.ts htmx.ts --format esm --dts",
    "dev": "rm -rf dist && tsup-node index.ts htmx.ts --format esm --dts --watch",
    "publish-beta": "npm publish --tag beta",
    "publish-non-beta": "npm publish",
    "update-latest": "pnpm update --latest",
    "typecheck": "tsc"
  },
  "devDependencies": {
    "hono": "^3.12.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hwy-js/hwy",
    "directory": "packages/utils"
  },
  "homepage": "https://hwy.dev",
  "bugs": "https://github.com/hwy-js/hwy/issues",
  "sideEffects": false
}
